<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/plp_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/plp_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/aroma9"
            app:riv_corner_radius_bottom_left="15dp"
            app:riv_corner_radius_bottom_right="15dp"
            app:riv_corner_radius_top_left="15dp"
            app:riv_corner_radius_top_right="15dp" />

        <TextView
            android:id="@+id/plp_name"
            android:text="@string/app_name"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:padding="4dp"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/custom_apple_mirror"
            android:layout_width="20dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/custom_apple"
            android:layout_width="20dp"
            android:layout_height="40dp" />
        
    </RelativeLayout>
    
</android.support.constraint.ConstraintLayout>